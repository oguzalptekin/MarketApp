<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginbackground"
    tools:context=".SignUpActivity"
    android:orientation="vertical">


    <EditText
        android:id="@+id/nameTxt"
        android:layout_width="281dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:paddingLeft="10dp"
        android:ems="10"
        android:background="@drawable/edittextbackground"
        android:textColorHint="@color/black"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="192dp" />

    <EditText
        android:id="@+id/surnameTxt"
        android:layout_width="281dp"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:ems="10"
        android:hint="Surname"
        android:background="@drawable/edittextbackground"
        android:textColorHint="@color/black"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="251dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/emailTxt"
        android:layout_width="281dp"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittextbackground"
        android:textColorHint="@color/black"
        android:ems="10"
        android:hint="E-Mail"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="311dp" />

    <EditText
        android:id="@+id/phoneTxt"
        android:layout_width="281dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittextbackground"
        android:textColorHint="@color/black"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="311dp" />

    <EditText
        android:id="@+id/passwordTxt"
        android:layout_width="281dp"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:background="@drawable/edittextbackground"
        android:textColorHint="@color/black"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="372dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/confirm_passwordTxt"
        android:layout_width="281dp"
        android:layout_height="45dp"
        android:paddingLeft="10dp"
        android:background="@drawable/edittextbackground"
        android:textColorHint="@color/black"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="435dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/SignUpBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="SignUpClicked"
        android:text="SIGN UP"
        android:background="@drawable/buttonbackround"
        app:layout_constraintEnd_toEndOf="@+id/confirm_passwordTxt"
        app:layout_constraintStart_toStartOf="@+id/confirm_passwordTxt"
        tools:layout_editor_absoluteY="515dp"
        android:layout_marginRight="55dp"
        android:layout_marginLeft="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/SignInBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="SignInClicked"
        android:background="@drawable/buttonbackround"
        android:text="SIGN IN"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="596dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

</LinearLayout>