<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginbackground"
    tools:context=".PaymentActivity">

    <EditText
        android:id="@+id/cardholdertxt"
        android:layout_width="281dp"
        android:layout_height="0dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="325dp"
        android:background="@drawable/edittextbackground"
        android:ems="10"
        android:hint="Cardholder's Name"
        android:inputType="textPersonName"
        android:paddingLeft="10sp"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cardnumbertxt"
        android:layout_width="281dp"
        android:layout_height="45dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="99dp"
        android:background="@drawable/edittextbackground"
        android:ems="10"
        android:hint="Card Number"
        android:inputType="number"
        android:paddingLeft="10sp"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardholdertxt" />

    <EditText
        android:id="@+id/cardlimittxt"
        android:layout_width="281dp"
        android:layout_height="45dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="99dp"
        android:background="@drawable/edittextbackground"
        android:ems="10"
        android:hint="Card Limit"
        android:inputType="number"
        android:paddingLeft="10sp"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardnumbertxt" />

    <EditText
        android:id="@+id/cvv"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="99dp"
        android:background="@drawable/edittextbackground"
        android:ems="10"
        android:hint="Cvv"
        android:inputType="number"
        android:paddingLeft="10sp"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardlimittxt" />

    <ImageButton
        android:id="@+id/cashbtn"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:layout_marginStart="104dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="116dp"
        android:background="@drawable/buttonbackround"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/cashbutton" />

    <ImageButton
        android:id="@+id/cardbtn"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:layout_marginStart="104dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="208dp"
        android:background="@drawable/buttonbackround"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_credit_card_24" />

    <EditText
        android:id="@+id/expireDate"
        android:layout_width="281dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edittextbackground"
        android:ems="10"
        android:hint="Expiration Date(MM/YYYY)"
        android:inputType="date"
        android:paddingLeft="10dp"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/cvv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardlimittxt" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="64dp"
        android:text="Pay with card"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cardbtn"
        app:layout_constraintTop_toBottomOf="@+id/cardholdertxt" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="86dp"
        android:layout_marginBottom="131dp"
        android:text="Pay with cash"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cashbtn"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

</androidx.constraintlayout.widget.ConstraintLayout>